
pipeline {
  agent { label 'alpine_controller' }
  environment {
   ANSIBLE_PRIVATE_KEY=credentials('mariadb-private-key') 
       DEBIAN_PRIVATE_KEY=credentials('debian_ssh_key')
    UBUNTU_PRIVATE_KEY=credentials('ubuntu_ssh_key') 

  }
  stages {
    stage('Hello') {
      steps {
        sh 'ansible-galaxy collection install -r requirements.yml'
        sh 'ansible-playbook -i inventory/mariadb.hosts --private-key=$ANSIBLE_PRIVATE_KEY playbooks/mariadb.yml'
      }
    }
  }
}