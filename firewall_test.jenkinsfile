
pipeline {

  agent { label 'alpine_controller' }
  
  environment {
    CENTOS_PRIVATE_KEY=credentials('centos_ssh_key') 
  }

  options { skipDefaultCheckout(true) }
  
  stages {

    stage('clean workspace') { 
      steps {
        cleanWs()
      }
    }

    stage('checkout') {
      steps {
        checkout scm
      }
    }    

    stage('CentOS test') {
      
      steps {
        sh 'ansible-galaxy collection install -r requirements.yml'
        sh 'ansible-playbook -i 172.22.0.5 --private-key=$CENTOS_PRIVATE_KEY playbooks/firewall_test.yml'
      }
    
    }
  }

  post { always { cleanWs() } }

}