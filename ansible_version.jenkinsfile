pipeline {
 
  agent { label 'alipne_controller' }
  
  options { skipDefaultCheckout(true) }
  
  stages {

    stage('clean workspace') {
      steps {
        cleanWs()
      }
    }

    stage('Version') {
      steps {
        sh '''
          ansible --version
          ansible-playbook --version
          ansible-galaxy --version
        '''
      }
    }

  }

  post { always { cleanWs() } }

}